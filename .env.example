# Kie.ai (animation photos via Kling 2.6 + musique Suno)
KIE_API_KEY=your_kie_api_key_here

# ElevenLabs (voix off TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here

# Google Vision (analyse contenu photo)
GOOGLE_APPLICATION_CREDENTIALS=./credentials/your-service-account.json

# App
APP_ENV=development
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:5173

# Auth (laisser vide pour désactiver l'auth en dev)
API_KEY=

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/app.db

# Tarification (USD — ajuster selon vos tarifs réels)
KIE_COST_PER_CLIP=0.125
ELEVENLABS_COST_PER_1K_CHARS=0.30
KIE_SUNO_COST_PER_GENERATION=0.06
GOOGLE_VISION_COST_PER_IMAGE=0.0015

# Vidéo output
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FPS=30
VIDEO_CODEC=libx264
